<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/space_animation">


    <ImageView
        android:id="@+id/astro"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/astronaut"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp"
        android:contentDescription="@string/astro" />

    <ImageView
        android:id="@+id/meteor"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:contentDescription="@string/meteor"
        app:srcCompat="@drawable/meteor" />

    <ImageView
        android:id="@+id/rocket"
        android:layout_width="wrap_content"
        android:layout_height="178dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="38dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@drawable/rocket"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:contentDescription="@string/rocket" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="36dp"
        android:background="@color/colorPrimary"
        android:text="ANIMATE!"
        android:textColor="@android:color/background_light"
        android:layout_alignParentRight="true"
        android:layout_marginRight="36dp" />
</RelativeLayout>